@page
@model CreateCarModel
@{
    ViewData["Title"] = "Create Car";
}

<h1>Create Car</h1>

<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="row mb-3">
            <div class ="col-2 px-2">
                <label asp-for="Car.Model"></label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Model" class="w-100 form-control" placeholder="Hyundai" onfocus="this.placeholder=''" onblur="this.placeholder='Hyundai'" />
                <span asp-validation-for="Car.Model" class="text-error"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Car.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Name" class="w-100 form-control" placeholder="Tucson" onfocus="this.placeholder=''" onblur="this.placeholder='Tucson'" />
                <span asp-validation-for="Car.Name" class="text-error"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Car.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Price" class="w-100 form-control" placeholder="5000" onfocus="this.placeholder=''" onblur="this.placeholder='5000'" />
                <span asp-validation-for="Car.Price" class="text-error"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Car.Year"></label>
            </div>
            <div class="col-6">
                <select asp-for="Car.Year" class="w-100 form-control">
                    <option value="" style="color: #808080;">--Year--</option>
                    @foreach (var year in Model.Years)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
                <span asp-validation-for="Car.Year" class="text-error"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Car.Color"></label>
            </div>
            <div class="col-6">
                <select asp-for="Car.Color" class="w-100 form-control">
                    <option value="" style="color: #808080;">--Color--</option>
                    @foreach (var color in Model.Colors)
                    {
                        <option value="@color">@color</option>
                    }
                </select>
                <span asp-validation-for="Car.Color" class="text-error"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Car.Description"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Car.Description" class="w-100 form-control" rows="5" placeholder="The Hyundai Tucson is a popular compact crossover from Hyundai. This car combines stylish design, practicality and efficient performance." onfocus="this.placeholder=''" onblur="this.placeholder='The Hyundai Tucson is a popular compact crossover from Hyundai. This car combines stylish design, practicality and efficient performance.'"></textarea>
                <span asp-validation-for="Car.Description" class="text-error"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2 px-2">
                <label asp-for="Car.Photo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Car.Photo" class="w-100 form-control" placeholder="https://Example.com.ua/assets/cache/images/Hyundai/Tucson/IMG.jpg" onfocus="this.placeholder=''" onblur="this.placeholder='https://Example.com.ua/assets/cache/images/Hyundai/Tucson/IMG.jpg'" />
                <span asp-validation-for="Car.Photo" class="text-error"></span>
            </div>
        </div>
                
        <div class="row mt-4 mb-2">
            <div class="col-3">
                <input type="submit" class="w-100 form-control" />
            </div>
        </div>
    </form>
</div>

